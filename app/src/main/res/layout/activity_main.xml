<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:background="@color/Mybackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnSend"
        android:layout_alignRight="@+id/btnSend"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/MyButton"
        android:text="Add Contact"
        android:textColor="@color/MyText" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnView"
        android:layout_alignRight="@+id/btnView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_weight="1"
        android:background="@color/MyButton"
        android:text="Send message"
        android:textColor="@color/MyText" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Phone Book"
        android:id="@+id/btnView"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@color/MyButton"
        android:textColor="@color/MyText"
        />
</RelativeLayout>
